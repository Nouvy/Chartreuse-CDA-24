{% extends 'base.html.twig' %}

{% block title %}Commande confirmée{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/payment.css') }}">
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success fa-5x mb-3"></i>
                    <h1 class="card-title">Commande confirmée !</h1>
                    <p class="card-text">
                        Votre commande a été validée avec succès.<br>
                        Un email de confirmation vous sera envoyé dans quelques instants.
                    </p>

                    <div class="mt-4">
                        <a href="{{ path('app_orders_user') }}" class="btn btn-primary">
                            <i class="fas fa-shopping-bag me-2"></i>
                            Voir mes commandes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 