{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur notre site{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="text-center">
                    <h1 class="display-4">Bienvenue, {{ controller_name }}!</h1>
                    <p class="lead">Une interface élégante pour tous vos besoins.</p>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg mx-2">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-secondary btn-lg mx-2">Inscription</a>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f8f9fa;
        }
        .display-4 {
            font-weight: bold;
            color: #343a40;
        }
        .lead {
            font-size: 1.25rem;
            color: #6c757d;
        }
        .btn {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
    </style>
{% endblock %}
